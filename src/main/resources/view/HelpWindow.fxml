<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.TextFlow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>

<?import javafx.scene.Scene?>
<fx:root resizable="false" title="Help" type="javafx.stage.Stage"
         xmlns="http://javafx.com/javafx/17"
         xmlns:fx="http://javafx.com/fxml/1">

  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>

  <scene>
    <Scene>
      <AnchorPane prefWidth="640.0" prefHeight="600.0"
                  style="-fx-background-color: #2b2b2b;">

        <!-- Scrollable content area -->
        <ScrollPane fx:id="scrollPane"
                    layoutX="10.0" layoutY="10.0"
                    prefWidth="620.0" prefHeight="520.0"
                    fitToWidth="true"
                    style="-fx-background:#2b2b2b;">
          <content>
            <TextFlow fx:id="helpTextFlow"
                      lineSpacing="5"
                      style="-fx-padding:10; -fx-background-color:#2b2b2b;">
              <!-- The actual text is inserted programmatically -->
            </TextFlow>
          </content>
        </ScrollPane>

        <!-- Button positioned neatly below -->
        <Button fx:id="copyButton"
                layoutX="520.0" layoutY="550.0"
                mnemonicParsing="false"
                text="Copy URL"
                onAction="#copyUrl"
                style="-fx-background-color:#3c3f41; -fx-text-fill:white;"/>

      </AnchorPane>
    </Scene>
  </scene>
</fx:root>
